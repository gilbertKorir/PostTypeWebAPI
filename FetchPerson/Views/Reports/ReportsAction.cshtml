<link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />



<div class="container" id="reportspage">
    <h2 style="font-family:'Monotype Corsiva'; font-size:30px;">Specific Account statements.</h2>
    <div class="row">
        <div class="col-md-12" id="box1">
            <div>
                <span>Person</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; : <select id="txtKycid" class="select"><option>--select--</option></select>
            </div>

            <div style="margin-left:34px;">
                <span>Account No</span> : <select id="accNm" class="select"><option>--select--</option></select>
            </div>

            <div style="margin-left:15px;">
                <button class="btn btn-success" id="generate" onclick="generateStatement()">Generate</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12" id="box2">
            <div>
                <span>From Date</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: <input id="sdate" class="select" type="date" />
            </div>

            <div style="margin-left:60px;">
                <span>To Date</span>&nbsp;: <input id="edate" class="select" type="date" />
            </div>
        </div>

    </div>
    <div id="popupBox" class="popup">
        <p class="text-center"><img src="~/images/tick.jpg" style="height:40px; width:40px;" /></p>
        <p class="text-center">Transaction Done successfully.</p>
        <p class="text-center"><button class="btn btn-success" onclick="hidePopup()">Ok</button></p>
    </div>

    <div class="row">
        <div class="col-md-12" style="margin-top:10px;">
            <table id="jptb"></table>
            <table id="jpager"></table>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/free-jqgrid/4.15.5/jquery.jqgrid.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="~/Scripts/jqGrid/grid.locale-en.js"></script>
<script src="~/Scripts/reports.js"></script>
<script src="~/Scripts/mainpage.js"></script>





















